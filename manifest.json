{
  "name": "Find it cheaper",
  "version": "0.0.1",
  "description": "Lets you find the same product cheaper on other websites. Works just for IKEA, for now.",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ikea.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
